<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ifarseer.android.browser.demo.MainActivity">


    <com.ifarseer.android.browser.view.FSBrowserView
        android:id="@+id/browserView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">


    </com.ifarseer.android.browser.view.FSBrowserView>

    <org.apmem.tools.layouts.FlowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:debugDraw="true"
        app:layoutDirection="ltr"
        app:weightDefault="1.0">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onUserChanged"
            android:text="UserChanged" />
    </org.apmem.tools.layouts.FlowLayout>
</LinearLayout>
